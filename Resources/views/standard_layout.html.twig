{% extends 'SonataAdminBundle::standard_layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets  'bundles/vincecmssonataadmin/css/main.css'
                    'bundles/vincecms/css/locales.css'
                    filter='?yui_css,cssrewrite' %}
        <link href="{{ asset_url }}" type="text/css" rel="stylesheet" />
    {% endstylesheets %}
    {% if form is defined %}
        {{ form_stylesheets(form) }}
    {% endif %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% if form is defined %}
        {% javascripts  '@VinceCmsSonataAdminBundle/Resources/public/js/bootstrap-filestyle.min.js'
                        '@VinceCmsSonataAdminBundle/Resources/public/js/url.js'
                        filter='?yui_js' %}
            <script type="text/javascript" src="{{ asset_url }}"></script>
        {% endjavascripts %}
        {{ form_javascripts(form) }}
    {% endif %}
{% endblock %}